@page "/TTLeagues/DivisionSummary/{TTInfoId}/{CompetitionId:int?}/{DivisionId}"
@inject TTLeaguesReader _ttleagues
@attribute [StreamRendering]

@if (isLoading)
{
	<div>Loading division...</div>
}
else if (division is not null)
{
	<h3>@division.Name</h3>
	<div class="division">
		<table class="table table-bordered table-sm">
			<thead>
				<tr>
					<th>#</th>
					<th>Team</th>
					<th>P</th>
					<th>W</th>
					<th>D</th>
					<th>L</th>
					<th>SF</th>
					<th>SA</th>
					<th>Avg</th>
					<th>Pts</th>
				</tr>
			</thead>
			<tbody>
				@foreach (TeamStanding team in teamStandings) {
				<tr>
					<td>@team.Position</td>
						<td><a href="TTLeagues/TeamSummary/@TTInfoId/@team.Name/@team.TeamId">@team.Name</a></td>
					<td>@team.Played</td>
					<td>@team.Won</td>
					<td>@team.Drawn</td>
					<td>@team.Lost</td>
					<td>@team.SetsFor</td>
					<td>@team.SetsAgainst</td>
					<td>@(team.Points > 0 ? $"{100 * team.Points / (team.SetsAgainst + team.SetsFor):0}%" : "0")</td>
					<td>@team.Points</td>
				</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<div>Division not found.</div>
}
