@page "/print/bracknellscorecard"
@layout PrintLayout

@for (int i = 1; i <= noOfScoreCards; i++) {
	<div class="score-sheet">
		<div class="header">
			<h1>BRACKNELL, WOKINGHAM & DISTRICT TABLE TENNIS ASSOCIATION</h1>
			<h2>LEAGUE SCORE SHEET</h2>
		</div>

		<div class="main-content">
			<div class="left-section">
				<div class="top-info">
					<div class="info-field">
						<span class="label">Division</span>
						<span class="dots">……………………</span>
						<span class="label">Date</span>
						<span class="dots">…………………………</span>
						<span class="label">Week No.</span>
						<span class="dots">…………</span>
					</div>
				</div>

				<div class="teams-header">
					<div class="team-line">
						<span class="dots">……………………………………</span>
						<span class="vs">V</span>
						<span class="dots">……………………………………</span>
					</div>
					<div class="team-labels">
						<span class="home-label">Home Team No. & Name</span>
						<span class="away-label">Away Team No. & Name</span>
					</div>
				</div>

				<table class="players-table">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th>First Name</th>
							<th>Surname</th>
							<th>Won</th>
							<th class="won-cell">Won</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td rowspan="3" class="team-label">Home</td>
							<td class="player-letter">A</td>
							<td></td>
							<td></td>
							<td></td>
							<td class="won-cell filled"></td>
						</tr>
						<tr>
							<td class="player-letter">B</td>
							<td></td>
							<td></td>
							<td></td>
							<td class="won-cell filled"></td>
						</tr>
						<tr>
							<td class="player-letter">C</td>
							<td></td>
							<td></td>
							<td></td>
							<td class="won-cell filled"></td>
						</tr>
						<tr>
							<td rowspan="3" class="team-label">Away</td>
							<td class="player-letter">X</td>
							<td></td>
							<td></td>
							<td class="won-cell filled"></td>
							<td></td>
						</tr>
						<tr>
							<td class="player-letter">Y</td>
							<td></td>
							<td></td>
							<td class="won-cell filled"></td>
							<td></td>
						</tr>
						<tr>
							<td class="player-letter">Z</td>
							<td></td>
							<td></td>
							<td class="won-cell filled"></td>
							<td></td>
						</tr>
						<tr>
							<td colspan="3" class="doubles-note">(½ each for the doubles)</td>
							<td>Result</td>
							<td></td>
							<td></td>
						</tr>
					</tbody>
				</table>

				@* <div class="doubles-note">(½ each for the doubles)</div> *@

				<table class="matches-table">
					<thead>
						<tr>
							<th></th>
							<th colspan="5">Scores</th>
							<th>H/A</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="match-label">A v X</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">B v Y</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">C v Z</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">B v X</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">A v Z</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label doubles-label">Doubles<br><span class="small-text">v</span></td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">C v Y</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">B v Z</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">C v X</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
						<tr>
							<td class="match-label">A v Y</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td class="score-cell">-</td>
							<td></td>
						</tr>
					</tbody>
				</table>
			</div>

			<div class="right-panel">
				<div class="notes-section">
					<strong>Enter notes here:</strong>
				</div>
				<div class="info-field">
					<span class="label">Player of the Match:</span>
					<span class="dots">……………………</span>
				</div>
				<div class="info-field">
					<span class="label">Match Highlights:</span>
				</div>

				<div class="signature-section">
					<div class="signature-label">Signed:</div>
					<div class="signature-line">
						<span class="dots">……………………………</span>
						<div class="caption">Home Team Captain</div>
					</div>
					<div class="signature-line">
						<span class="dots">……………………………</span>
						<div class="caption">Away Team Captain</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	@if (i < noOfScoreCards) {
		<div class="page-break"></div>
	}
}

@code {
	private int noOfScoreCards = 2;

}
